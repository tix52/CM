<RibbonWindow x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Ribbon x:Name="RibbonWin" SelectedIndex="0">
            <RibbonTab Header="Administration">
                <RibbonGroup >
                    <RibbonButton Label="Clients" LargeImageSource="pack://application:,,,/Resources/personal.png"/>
                    <RibbonButton Label="Casiers" LargeImageSource="pack://application:,,,/Resources/personal.png"/>
                    <RibbonButton Label="Affectations" LargeImageSource="pack://application:,,,/Resources/personal.png"/>
                </RibbonGroup>

            </RibbonTab>
        </Ribbon>
        <DockPanel Name="UIPanel" Grid.Row="1">
        </DockPanel>
    </Grid>
</RibbonWindow>
